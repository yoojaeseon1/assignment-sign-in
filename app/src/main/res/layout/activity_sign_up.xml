<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4BA09"
    tools:context=".SignUpActivity">


    <TextView
        android:id="@+id/sign_up_tv_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="아이디"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_et_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="아이디를 입력하세요."
        android:text="id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_tv_id" />

    <TextView
        android:id="@+id/sign_up_tv_pw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="비밀번호"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_et_id" />

    <EditText
        android:id="@+id/sign_up_et_pw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:text="password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_pw" />

    <TextView
        android:id="@+id/sign_up_tv_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="이름"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_et_pw"
        tools:layout_editor_absoluteY="191dp" />

    <EditText
        android:id="@+id/sign_up_et_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="이름을 입력하세요"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_tv_name" />

<!--    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />-->

    <TextView
        android:id="@+id/sign_up_tv_birthday"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="생년월일"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_et_name" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_birthday"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_tv_birthday">

<!--        <NumberPicker-->
<!--            android:id="@+id/sign_up_np_year"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

<!--        <NumberPicker-->
<!--            android:id="@+id/sign_up_np_month"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintStart_toEndOf="@id/sign_up_np_year"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

<!--        <NumberPicker-->
<!--            android:id="@+id/sign_up_np_day"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintStart_toEndOf="@id/sign_up_np_month"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->


        <!--android:calendarViewShown="false"-->

        <DatePicker
            android:id="@+id/sign_up_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--        <Button-->
<!--            android:id="@+id/sign_up_btn_birthday"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/sign_up_dp" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sign_in_tv_mbti"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="MBTI"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/layout_birthday"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/layout_mbti"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_mbti">

<!--        android:background="@drawable/shape_btn_mbti"-->
        <Button
            android:id="@+id/sign_in_btn_mbti_e_i"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="E"
            android:textSize="25sp"
            android:gravity="center" />
        <Button
            android:id="@+id/sign_in_btn_mbti_n_s"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="N"
            android:textSize="25sp"
            android:gravity="center" />
        <Button
            android:id="@+id/sign_in_btn_mbti_f_t"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="F"
            android:textSize="25sp"
            android:gravity="center" />
        <Button
            android:id="@+id/sign_in_btn_mbti_p_j"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="P"
            android:textSize="25sp"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_mbti"
        />

</androidx.constraintlayout.widget.ConstraintLayout>